{
  "compilerOptions": {
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "rootDir": "src",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
